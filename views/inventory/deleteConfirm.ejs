<div class="container">
  <h1>
    <%= title %>
  </h1>
  <form action="/inv/delete" id="delete-form" method="post">
    <div>
      <label for="inv_make">Make:</label>
      <div><input id="inv_make" name="inv_make" type="text" value="<%= inv_make %>" readonly></div>
    </div>
    <div>
      <label for="inv_model">Model:</label>
      <div><input id="inv_model" name="inv_model" type="text" value="<%= inv_model %>" readonly></div>
    </div>
    <div>
      <label for="inv_year">Year:</label>
      <div><input id="inv_year" name="inv_year" type="text" value="<%= inv_year %>" readonly></div>
    </div>
    <p>Confirm Deletion - The delete is permanent.</p>
    <div><button id="button-delete" type="submit">Confirm Delete</button></div>
    <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
  </form>
</div>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>