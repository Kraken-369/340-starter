<div class="container">
  <h1><%= title %></h1>
  <hr>
  <div class="product-detail">
    <%- detail %>
  </div>
  <form action="/rentacar/proceed" id="rentacar-form" method="post">
    <div>
      <label for="start_date">Start date</label>
      <div class="form-control" id="start_date">
        <input name="start_date" id="start_date" type="date" required>
      </div>
    </div>
    <div>
      <label for="days">Days for rent</label>
      <div class="form-control">
        <input name="days" id="days" type="number" required></div>
    </div>
    <div>
      <label for="total_cost">Total Cost USD</label>
      <div class="form-control">
        <input name="total_cost" id="total_cost" type="text" disabled></div>
    </div>
    <input type="hidden" name="inv_price_day" value="<%= inv_price_day %>">
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    <input type="hidden" name="account_id" value="<%= account_id %>">
    <button type="submit">Proceed to rent</button>
  </form>

  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
</div>

<script src="/js/rentacar.js"></script>