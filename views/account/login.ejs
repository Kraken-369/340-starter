<div class="container">
  <h1><%= title %></h1>
  <form id="loginForm" action="/account/login" method="post">
    <div>
      <label for="account_email">E-Mail:</label>
      <div class="form-control">
        <input id="account_email" name="account_email" type="text">
      </div>
    </div>
    <div>
      <label for="account_password">Password:</label>
      <div class="form-control">
        <input id="account_password" name="account_password" type="password">
      </div>
    </div>
    <div>
      <button>Submit</button>
    </div>
  </form>
  <h3>No account? <a href="/account/register">Sign-up</a></h3>
  
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
</div>
